{% extends 'base.html.twig' %}

{% block title %}Admin - Edit{% endblock %}

{% block body %}

<div class="jumbotron">
    <h1 class="text-center text-uppercase">Détail du mail</h1>
</div>

<div class="container">
    {{ form_start(form) }}
    <h4>Prénom/Nom :</h4>
    <p>{{ contact.username }}</p>
    <h4>Adresse e-mail :</h4>
    <p>{{ contact.email }}</p>
    <h4>Message :</h4>
    <p>{{ contact.message }}</p>
    <h4>Envoyé le :</h4>
    <p>{{ contact.sendAt|date("m/d/Y") }}</p>

    {{ form_row(form.treated) }}
    <div class="form-groupe">
        <button class="btn btn-primary" type="submit">Valider</button>
    </div>
    {{ form_end(form) }}

    <a class="btn btn-primary mt-3" href="mailto:{{ contact.email }}">Répondre par mail</a>
</div>

{% endblock %}
